<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/tv_sign_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:text="05.01"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_get_up_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_sign_time"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:text="起床时间：6:30" />

    <TextView
        android:id="@+id/tv_mind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_get_up_time"
        android:layout_below="@+id/tv_get_up_time"
        android:layout_marginTop="10dp"
        android:text="最早的起床时间，纪念一下呵呵呵呵呵呵呵呵呵哈哈哈哈哈哈哈" />

    <RelativeLayout
        android:id="@+id/ll_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_sign_time"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/tv_sign_time"
        android:layout_marginLeft="20dp" >

        <View
            android:id="@+id/dot"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_dot" />

        <View
            android:id="@+id/line_upper"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_above="@id/dot"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:background="@color/white" />

        <View
            android:id="@+id/line_lower_1"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/dot"
            android:layout_marginLeft="2dp"
            android:background="@color/white" />
    </RelativeLayout>

    <View
        android:id="@+id/line_lower_2"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_mind"
        android:layout_alignLeft="@+id/ll_dot"
        android:layout_below="@+id/ll_dot"
        android:layout_marginLeft="2dp"
        android:background="@color/white" />

</RelativeLayout>