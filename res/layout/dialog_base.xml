<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/title_dialog" />
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- Container -->
    </RelativeLayout>

    <View
        android:id="@+id/btn_horizontal_divider"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/divider_of_dialog" />

    <LinearLayout
        android:id="@+id/bottom_btns"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_bg_selector"
            android:text="@string/cancel"
            android:textColor="@color/text_color_of_dialog"
            android:textSize="14.5sp" />

        <View
            android:id="@+id/btn_vertical_divider"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/divider_of_dialog" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_bg_selector"
            android:text="@string/ok"
            android:textColor="@color/text_color_of_dialog"
            android:textSize="14.5sp" />
    </LinearLayout>

</LinearLayout>